FROM debian:DISTRO-slim

WORKDIR /build

RUN apt-get update && apt-get install -y \
    debhelper \
    dh-virtualenv \
    git \
    python3 \
    python3-dev \
    python3-venv

COPY . /build

RUN git config --global user.name "Tarjei Hus√∏y (automated)" && git config --global user.email "apt@thusoy.com"

RUN DH_VIRTUALENV_ARGUMENTS='' dpkg-buildpackage -us -uc \
    && mkdir -p dist \
    && cp ../*.deb dist
